<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/calendarinfo"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight = ".8"
            android:id = "@+id/calendarweekday"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingRight="150dp"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/prevmonthbutton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="&lt;"/>

        <TextView
            android:id="@+id/currentmonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/prevmonthbutton"/>

        <Button
            android:id="@+id/nextmonthbutton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@+id/currentmonth"
            android:text="&gt;" />

        <Button
            android:id="@+id/prevyearbutton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/nextmonthbutton"
            android:text="&lt;" />

        <TextView
            android:id="@+id/currentyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/prevyearbutton"/>

        <Button
            android:id="@+id/nextyearbutton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@+id/currentyear"
            android:text="&gt;" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:id = "@+id/day1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:id = "@+id/day2"/>

        <TextView
            android:id = "@+id/day3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id = "@+id/day4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id = "@+id/day5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id = "@+id/day6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id = "@+id/day7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <GridView
        android:id="@+id/calendar_grid"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:numColumns="7"
        android:gravity="center"
        android:layout_marginTop="10dp" />

</LinearLayout>
