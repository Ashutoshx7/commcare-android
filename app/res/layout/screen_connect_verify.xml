<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llTopBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <include
                    android:id="@+id/commonAppBar"
                    layout="@layout/connectid_common_title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <org.commcare.views.connect.connecttextview.ConnectBoldTextView
                android:id="@+id/connect_verify_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:text="@string/connect_verify_title"
                android:textAlignment="center"
                android:textColor="@color/connect_text_color"
                android:textSize="@dimen/text_larger" />

            <org.commcare.views.connect.connecttextview.ConnectMediumTextView
                android:id="@+id/connect_verify_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/connect_verify_message"
                android:textAlignment="center"
                android:textColor="@color/connect_subtext"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/connect_verify_fingerprint_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/connect_verify_fingerprint_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fingerprint"
                    app:tint="@color/connect_blue_color" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/connect_verify_fingerprint_button"
                    style="@style/CustomButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/connect_verify_configure_fingerprint" />

            </LinearLayout>

            <org.commcare.views.connect.connecttextview.ConnectMediumTextView
                android:id="@+id/connect_verify_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/content_min_margin"
                android:text="@string/choice_or"
                android:textSize="@dimen/text_medium" />

            <LinearLayout
                android:id="@+id/connect_verify_pin_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/connect_verify_pin_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pattern"
                    app:tint="@color/connect_blue_color" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/connect_verify_pin_button"
                    style="@style/CustomButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/connect_verify_configure_pin" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>