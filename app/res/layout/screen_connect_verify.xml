<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/cc_core_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/connect_verify_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/content_min_margin"
        android:textColor="@color/cc_neutral_color"
        android:textSize="@dimen/text_largest"
        android:text="@string/connect_verify_title"/>

    <TextView
        android:id="@+id/connect_verify_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/content_min_margin"
        android:textColor="@color/cc_neutral_color"
        android:textSize="@dimen/text_medium"
        android:text="@string/connect_verify_message"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cc_core_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/connect_verify_fingerprint_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/content_min_margin" />

        <TextView
            android:id="@+id/connect_verify_fingerprint_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/content_min_margin"
            android:textColor="@color/cc_neutral_color"
            android:textSize="@dimen/text_medium"
            android:text="@string/connect_verify_fingerprint"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cc_core_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/connect_verify_pin_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/content_min_margin" />

        <TextView
            android:id="@+id/connect_verify_pin_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/content_min_margin"
            android:textColor="@color/cc_neutral_color"
            android:textSize="@dimen/text_medium"
            android:text="@string/connect_verify_pin"/>

    </LinearLayout>

    <Button
        android:id="@+id/connect_verify_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/content_start"
        android:paddingTop="@dimen/content_start" />

</LinearLayout>