<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/component_audio_text_btn_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" 
        android:layout_centerHorizontal="true" 
        android:src="@android:drawable/ic_media_play" 
        android:contentDescription="@string/image_button_desc"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/component_audio_text_txt"
        style="@style/EntityItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:textAppearance="@style/EntityItemText"
        android:visibility="visible" />

</RelativeLayout>