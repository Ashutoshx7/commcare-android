<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draw_relative_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:id="@+id/drawViewLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true">

        <org.commcare.activities.components.RoundedButton
            android:id="@+id/btnFinishDraw"
            android:layout_width="wrap_content"
            android:enabled="false"
            android:layout_height="wrap_content"
            app:roundButtonBackgroundColor="@color/button_primary"
            app:roundButtonTextColor="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <org.commcare.activities.components.RoundedButton
                android:id="@+id/btnResetDraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:roundButtonBackgroundColor="@color/button_primary"
                app:roundButtonTextColor="@color/white"/>

            <org.commcare.activities.components.RoundedButton
                android:id="@+id/btnCancelDraw"
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                app:roundButtonBackgroundColor="@color/button_primary"
                app:roundButtonTextColor="@color/white"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
