<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/cc_core_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/connect_pictures_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/content_min_margin"
        android:textColor="@color/cc_neutral_color"
        android:textSize="@dimen/text_largest" />

    <TextView
        android:id="@+id/connect_pictures_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/content_min_margin"
        android:gravity="start"
        android:textSize="@dimen/text_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cc_core_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/connect_pictures_face_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/content_min_margin" />

        <TextView
            android:id="@+id/connect_pictures_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/content_min_margin"
            android:gravity="start"
            android:textSize="@dimen/text_medium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cc_core_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/connect_pictures_id_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/content_min_margin" />

        <TextView
            android:id="@+id/connect_pictures_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/content_min_margin"
            android:gravity="start"
            android:textSize="@dimen/text_medium"/>

    </LinearLayout>

    <Button
        android:id="@+id/connect_pictures_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/content_start"
        android:paddingTop="@dimen/content_start" />

</LinearLayout>