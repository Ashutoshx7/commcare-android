<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recording_header"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_large"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recording_instruction"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/recording_layout"
        android:layout_marginTop="20dp">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/record_start"
            android:layout_gravity="center"
            android:id = "@+id/startrecording"/>

        <com.liulishuo.magicprogresswidget.MagicProgressCircle
            android:id="@+id/demo_mpc"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:mpc_percent="0"
            app:mpc_stroke_width="15dp"
            app:mpc_default_color="@color/grey_light"
            app:mpc_start_color="@color/cc_brand_color"
            app:mpc_end_color="@color/cc_brand_color"
            android:layout_gravity="center"/>

    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saverecording"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:enabled="false"
        android:background="@color/transparent"
        android:textColor="@color/grey"/>


</LinearLayout>