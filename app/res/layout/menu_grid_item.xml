<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAppearance="@style/EntityItemText"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/menu_grid_icon_size"
        android:layout_height="@dimen/menu_grid_icon_with_badge"
        android:layout_gravity="center"
        style="@style/ListContentV2" >

        <ImageView
            android:id="@+id/row_img"
            android:layout_width="@dimen/menu_grid_icon_size"
            android:layout_height="@dimen/menu_grid_icon_size" />

        <RelativeLayout
            android:id="@+id/badge_count_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/badge_count_width"
                android:layout_height="@dimen/badge_count_width"
                android:layout_centerInParent="true"
                android:src="@drawable/badge_count_circle"
                android:id="@+id/badge_view_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/cc_attention_positive_text"
                android:textSize="@dimen/badge_count_font_size"
                android:background="@color/transparent"
                android:id="@+id/badge_view_text"/>

        </RelativeLayout>

    </RelativeLayout>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="2"
        android:lines="2"
        android:ellipsize="end"
        android:id="@+id/row_txt"
        style="@style/GridEntityItemTextView"
        android:textAppearance="@style/GridEntityItemText">
    </TextView>

</LinearLayout>