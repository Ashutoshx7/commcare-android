<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAppearance="@style/EntityItemText"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/row_img"
        android:layout_gravity="center"
        android:layout_width="@dimen/menu_grid_icon_size"
        android:layout_height="@dimen/menu_grid_icon_size"
        style="@style/ListContentV2" />

    <RelativeLayout
        android:id="@+id/badge_count_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/row_img"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/min_button_height"
            android:layout_height="@dimen/min_button_height"
            android:layout_centerInParent="true"
            android:src="@drawable/badge_count_circle"
            android:id="@+id/badge_view_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/cc_attention_positive_text"
            android:background="@color/transparent"
            android:id="@+id/badge_view_text"/>

    </RelativeLayout>


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:maxLines="2"
              android:lines="2"
              android:ellipsize="end"
              android:id="@+id/row_txt"
              style="@style/GridEntityItemTextView"
              android:textAppearance="@style/GridEntityItemText">
    </TextView>
</LinearLayout>