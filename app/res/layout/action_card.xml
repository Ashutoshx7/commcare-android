<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/action_card"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:background="@color/cc_brand_text"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/white"
        card_view:contentPadding="8dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/entity_item_image_margins"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/icon"
                android:textSize="@dimen/font_size_large"/>

            <org.commcare.views.media.AudioButton
                android:id="@+id/audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text"
                android:background="@null"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="@dimen/min_button_padding"
                android:visibility="gone"/>

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/content_min_margin"
                android:layout_marginRight="@dimen/content_min_margin"
                android:layout_toLeftOf="@+id/launch_action"
                android:background="@android:color/darker_gray"/>

            <ImageButton
                android:id="@+id/launch_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="@dimen/min_button_padding"
                android:src="@drawable/icon_chevron_right_attnpos"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>