<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="org.commcare.fragments.newConnectId.PhoneFragment">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_marginTop="120px"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/company_logo"
            android:layout_centerHorizontal="true"
            android:layout_height="32dp"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_dimagi_logo" />
        <View
            android:background="@android:color/darker_gray"
            android:id="@+id/divider"
            android:layout_below="@+id/company_logo"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:layout_width="fill_parent" />

        <TextView
            android:fontFamily="@font/roboto_medium"
            android:id="@+id/otp_title"
            android:layout_below="@id/divider"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:text="@string/enter_otp"
            android:textColor="@color/connect_dark_blue_color"
            android:textFontWeight="500"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/user_name"
            android:layout_below="@id/otp_title"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:text="Parth Mittal"
            android:textColor="@color/connect_subtext"
            android:textFontWeight="500"
            android:textSize="16sp" />
        <LinearLayout
            android:id="@+id/phone_layout"
            android:layout_below="@id/user_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_phone"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:text="+91 7748962888"
                android:textColor="@color/connect_secondary_text"
                android:textFontWeight="400"
                android:textSize="16sp" />

            <TextView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/phone_change_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/change"
                android:textColor="@color/connect_dark_blue_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/otp_layout"
            android:layout_below="@id/phone_layout"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:background="@color/black"
                android:backgroundTint="@color/connect_light_grey"
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:padding="1dp"
                android:src="@drawable/ic_outline_lock_24" />
            <EditText
                android:id="@+id/otp_box1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:background="@drawable/date_edit"
                android:maxLength="1"
                android:layout_marginLeft="16dp"
                android:textAlignment="center"
                android:importantForAccessibility="yes"
                android:importantForAutofill="yes" />

            <EditText
                android:id="@+id/otp_box2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:background="@drawable/date_edit"
                android:maxLength="1"
                android:layout_marginLeft="16dp"
                android:textAlignment="center"
                android:importantForAccessibility="yes"
                android:importantForAutofill="yes" />

            <EditText
                android:id="@+id/otp_box3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:background="@drawable/date_edit"
                android:maxLength="1"
                android:layout_marginLeft="16dp"
                android:textAlignment="center"
                android:importantForAccessibility="yes"
                android:importantForAutofill="yes" />

            <EditText
                android:id="@+id/otp_box4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:inputType="number"
                android:background="@drawable/date_edit"
                android:maxLength="1"
                android:layout_marginLeft="16dp"
                android:textAlignment="center"
                android:importantForAccessibility="yes"
                android:importantForAutofill="yes" />
        </LinearLayout>

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/otp_layout"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="80dp"
            android:text="Resend OTP in 60s"
            android:textSize="12sp"
            android:textFontWeight="500"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/holo_blue_dark" />

        <org.commcare.views.connect.RoundedButton
            android:gravity="start|center"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/timer_text"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:text="Resend OTP"
            app:roundButtonTextColor="@color/white"
            app:roundButtonBackgroundColor="@color/connect_blue_color"
            app:roundButtonBorderRadius="@dimen/dp48"
            app:roundButtonIcon="@drawable/ic_refresh_white"
            app:roundButtonIconTintColor="@color/white"
            app:roundButtonIconLeftAlign="false"/>

    </RelativeLayout>


</FrameLayout>