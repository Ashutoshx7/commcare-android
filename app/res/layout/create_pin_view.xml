<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pin_prompt_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/standard_spacer_large"
        android:text="@string/enter_pin_directive"
        android:textSize="@dimen/text_large" />

    <EditText
        android:id="@+id/pin_entry"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:textSize="@dimen/text_largest"
        android:layout_margin="@dimen/standard_spacer_large"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:inputType="numberPassword"
        android:maxLength="4" >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/min_button_height"
            android:id="@+id/pin_cancel_button"
            android:text="@string/cancel"
            android:textSize="@dimen/font_size_dp_medium"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/min_button_height"
            android:id="@+id/pin_confirm_button"
            android:text="@string/continue_pin_button"
            android:textSize="@dimen/font_size_dp_medium"
            android:enabled="false"
            android:layout_weight="1"/>

    </LinearLayout>


</RelativeLayout>