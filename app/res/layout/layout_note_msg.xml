<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/activity_vertical_margin">

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal">-->

        <TextView
            android:id="@+id/layout_note_msg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Message Title"
            android:textColor="@color/red"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/layout_note_msg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_spacer"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

    <!--</LinearLayout>-->

    <TextView
        android:id="@+id/layout_note_msg_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_spacer"
        android:text="Explanation of error message"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/layout_note_msg_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_spacer"
        android:text="What to do about it"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

</LinearLayout>