<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="org.commcare.android"
      android:versionName="2.0" android:versionCode="106">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true" android:theme="@android:style/Theme.Light" android:name=".application.CommCareApplication">
        <activity android:label="@string/app_name" android:name=".activities.CommCareHomeActivity" android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    
<activity android:label="@string/app_name" android:name=".activities.LoginActivity" android:windowSoftInputMode="adjustResize"></activity>
<activity android:name=".activities.MenuList"></activity>

<activity android:name=".activities.ReferenceDetailActivity"></activity>

<provider android:name=".providers.PreloadContentProvider" android:authorities="org.commcare.preloadprovider" />
<provider android:name=".odk.provider.FormsProvider" android:authorities="org.commcare.android.provider.odk.forms" />
<provider android:name=".odk.provider.InstanceProvider" android:authorities="org.commcare.android.provider.odk.instances" />

<activity android:name=".preferences.CommCarePreferences"></activity>
<activity android:name="org.commcare.android.activities.DotsEntryActivity">
    <intent-filter>
    	<action android:name="org.commcare.android.action.DotsEntry"/>
		<category android:name="android.intent.category.DEFAULT"/>
    </intent-filter>
</activity>
<activity android:name=".activities.CallOutActivity"></activity>
<activity android:name=".activities.CommCareSetupActivity" android:configChanges="orientation" android:windowSoftInputMode="adjustResize">
    <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
	    <data android:scheme="http"/>
	    <data android:scheme="https"/>
	    <data android:host="*" />
	    <data android:mimeType="commcare/profile"/> 
	</intent-filter>
	<intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
        <data android:scheme="http"/>
        <data android:host="*" />
        <data android:pathPattern=".*\\.ccpr"/>
	</intent-filter>
	<intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
        <data android:scheme="https"/>
        <data android:host="*" />
        <data android:pathPattern=".*\\.ccpr"/>
	</intent-filter>
	<intent-filter>
    	<action android:name="android.intent.action.VIEW" />
    	<category android:name="android.intent.category.DEFAULT" />
    	<data android:scheme="file" />
    	<data android:host="*" />
    	<data android:pathPattern=".*\\.ccpr" />
    </intent-filter>
	
</activity>


		<!-- Enable Shortcuts for Command Actions -->
		<activity android:name=".application.AndroidShortcuts"
                  android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <activity-alias android:name=".application.ShortcutGenerator"
            android:targetActivity=".application.AndroidShortcuts"
            android:label="CommCare Action">

            <!--  This intent-filter allows your shortcuts to be created in the launcher. -->
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity-alias>
<activity android:windowSoftInputMode="stateUnchanged|adjustResize" android:name=".activities.EntitySelectActivity"></activity>
<activity android:windowSoftInputMode="adjustResize" android:name=".activities.EntityDetailActivity"></activity>
<activity android:name=".activities.FormRecordListActivity" android:windowSoftInputMode="adjustResize"></activity>
<service android:name=".services.CommCareSessionService" android:enabled="true"></service>
<activity android:name=".activities.CallLogActivity" android:windowSoftInputMode="adjustResize"></activity>
<activity android:name=".activities.MessageLogActivity" android:windowSoftInputMode="adjustResize"></activity>
<activity android:name=".activities.PhoneLogActivity" android:windowSoftInputMode="adjustResize"></activity>
<activity android:name="org.odk.collect.android.activities.FormEntryActivity" android:windowSoftInputMode="adjustResize"></activity>
<activity android:name="org.odk.collect.android.activities.FormHierarchyActivity" android:windowSoftInputMode="adjustResize"></activity>
<activity android:name="org.odk.collect.android.activities.GeoPointActivity" android:windowSoftInputMode="adjustResize"></activity>
<activity android:name="org.odk.collect.android.preferences.PreferencesActivity" android:windowSoftInputMode="adjustResize"></activity>
</application>


<uses-library android:name="org.javarosa" />
<uses-library android:name="org.commcare" />

  <uses-feature android:name="android.hardware.telephony" android:required="false" />
  
  <uses-permission android:name="android.permission.READ_PHONE_STATE" xmlns:android="http://schemas.android.com/apk/res/android"/>
  <uses-permission android:name="android.permission.INTERNET" xmlns:android="http://schemas.android.com/apk/res/android"/>
  <uses-permission android:name="android.permission.ACCESS_SURFACE_FLINGER" xmlns:android="http://schemas.android.com/apk/res/android"/>
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" xmlns:android="http://schemas.android.com/apk/res/android"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" xmlns:android="http://schemas.android.com/apk/res/android"/>

<uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>

<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>

<uses-sdk android:minSdkVersion="5" android:targetSdkVersion="8"></uses-sdk>

<uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
<uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
<uses-permission android:name="android.permission.READ_SMS"></uses-permission>
</manifest> 