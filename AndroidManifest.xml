<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.commcare.android"
      android:versionName="1.0" android:versionCode="3">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true" android:theme="@android:style/Theme.Light" android:name=".application.CommCareApplication">
        <activity android:label="@string/app_name" android:name=".activities.CommCareHomeActivity" android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    
<activity android:label="@string/app_name" android:name=".activities.LoginActivity" android:windowSoftInputMode="adjustResize"></activity>
<activity android:name=".activities.MenuList"></activity>

<activity android:name=".activities.CaseDetailActivity"></activity>

<provider android:name="org.commcare.android.providers.PreloadContentProvider" android:authorities="org.commcare.preloadprovider" />

<activity android:name=".preferences.CommCarePreferences"></activity>
<activity android:name="org.commcare.android.activities.DotsEntryActivity">
    <intent-filter>
    	<action android:name="org.commcare.android.action.DotsEntry"/>
		<category android:name="android.intent.category.DEFAULT"/>
    </intent-filter>
</activity>
<activity android:name=".activities.CallOutActivity"></activity>
<activity android:name=".activities.CommCareSetupActivity" android:configChanges="orientation" android:windowSoftInputMode="adjustResize">
    <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
	    <data android:scheme="http"/>
	    <data android:scheme="https"/> 
	    <data android:mimeType="commcare/profile"/>
	</intent-filter>
</activity>


		<!-- Enable Shortcuts for Command Actions -->
		<activity android:name=".application.AndroidShortcuts"
                  android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <activity-alias android:name=".application.ShortcutGenerator"
            android:targetActivity=".application.AndroidShortcuts"
            android:label="CommCare Action">

            <!--  This intent-filter allows your shortcuts to be created in the launcher. -->
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity-alias>




<activity android:windowSoftInputMode="adjustResize" android:name=".activities.CaseSelectActivity"></activity>
<activity android:windowSoftInputMode="adjustResize" android:name=".activities.ReferralSelectActivity"></activity>
<activity android:windowSoftInputMode="adjustResize" android:name=".activities.ReferralDetailActivity"></activity>
<activity android:name=".activities.FormRecordListActivity" android:windowSoftInputMode="adjustResize"></activity>
</application>


<uses-library android:name="org.javarosa" />
<uses-library android:name="org.commcare" />

  <uses-permission xmlns:android="http://schemas.android.com/apk/res/android" android:name="android.permission.READ_PHONE_STATE"/>
  <uses-permission xmlns:android="http://schemas.android.com/apk/res/android" android:name="android.permission.INTERNET"/>
  <uses-permission xmlns:android="http://schemas.android.com/apk/res/android" android:name="android.permission.ACCESS_SURFACE_FLINGER"/>
  <uses-permission xmlns:android="http://schemas.android.com/apk/res/android" android:name="android.permission.ACCESS_FINE_LOCATION"/>
  <uses-permission xmlns:android="http://schemas.android.com/apk/res/android" android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

<uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>

<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>

<uses-sdk android:minSdkVersion="5" android:maxSdkVersion="8" android:targetSdkVersion="8"></uses-sdk>
</manifest> 